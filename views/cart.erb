<h2> Your cart </h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Qty</th>
    </tr>
  </thead>
  <% total_price = 0 %>
  <% total_qty = 0 %>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_qty += item[1].to_i %>

  <% end %>

    <tr>
      <td>Total:</td>
      <td><%= total_price %> UAN</td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>

<form action="/place_order" method="POST" role="form">

<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />

<div class="form-group">
    <label>Name:</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Name" >
  </div>

  <div class="form-group">
    <label>Phone:</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Phone" >
  </div>

  <div class="form-group">
    <label>Address</label>
    <input name="order[address]" type="text" class="form-control" placeholder="Address" >
  </div>

  <button type="submit" class="btn btn-success btn-lg">Place this order!</button>
</form>