<h2>Orders</h2>
<table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Address</th>
      </tr>
    </thead>

    <tbody>
    <% @orders.reverse.each do |item| %>
      <tr>

      <td><%= item[:orders_input] %></td>
        
        <td><%= item[:name] %></td>
        <td><%= item[:phone] %></td>
        <td><%= item[:address] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>